<%= render 'navbar'%>

<div class="container-fluid">

<div class="row">
  <div class="col-sm-6">
<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
    
    </ul>
  </div>
  <div class="card-body">
    <h5 class="card-title">Name: <%=@musician.name%></h5>
    <p class="card-text">
    <img src='<%=@musician.img_url%>'  max-width= "100vw" height="200" class="border border-dark rounded-circle">





<p>Instrument: <%=@musician.instrument%></p>

<p>Location: <%=@musician.location%></p>

<p>Bio:</p>
<p><%=@musician.bio%></p>

<p> Years Experience: <%=@musician.years_experience%> </p>

<p> Number of followers: <%= @musician.followers.count%></p>

<% if @musician.id == @current_user.id %>
 
<%else%>
    <% if @bool_check == true %>
    <p> You follow this person </p>
    <%=button_to 'unfollow', {:controller => :musicians, :action => 'unfollow', :id => @musician.id}, :method => :get%>
    <%else %>
    <%=button_to 'follow', {:controller => :musicians, :action => 'follow', :id => @musician.id}, :method => :get%>
    <%end%>
<%end%>


<p>Genres:</p>
<% @musician.genres.uniq.each do |genre| %>
<li><%= genre.name%></li>
<%end%>

<br/>
<% if @musician.id == @current_user.id %>
<%=button_to 'Edit Profile', {:controller => :musicians, :action => 'edit', :id => @musician.id}, :method => :get%>
<%end%>
<br/>
<%=button_to 'Return to Index', {:controller => :musicians, :action => 'index', :id => @musician.id}, :method => :get%>

    </p>
  
  </div>
</div>
</div>



